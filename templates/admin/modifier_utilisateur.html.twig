{% extends 'base.html.twig' %}

{% block title %}Modifier un utilisateur{% endblock %}

{% block body %}
    <h1>Modifier un utilisateur</h1>

    {{ form_start(form) }}
        {{ form_row(form.prenom) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.dateDeNaissance) }}
        {{ form_row(form.roles) }}

        <button type="submit" class="btn btn-success">Modifier l'utilisateur</button>
    {{ form_end(form) }}
{% endblock %}
